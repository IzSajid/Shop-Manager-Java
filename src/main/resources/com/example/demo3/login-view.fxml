<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo3.LoginController">
    <Label text="Employee Login" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <TextField fx:id="employeeIdField" promptText="Employee ID" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" onAction="#handleLogin" />
    <Label fx:id="errorLabel" textFill="red" />
</VBox>
